<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="Name">Name</th>
      <th scope="Advertiser">Advertiser</th>
      <th scope="Payout">Payout</th>
  </thead>
  </tbody>
    <% unless @my_offers.empty? %>
      <% @my_offers.each do |offer| %>
        <tr>
          <td><%= best_in_place offer, :id %></td>
          <td><%= best_in_place offer, :name %></td>
          <td><%= best_in_place offer, :advertiser %></td>
          <td><%= best_in_place offer, :payout %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
